{
  "name": "playwright-saucedemo",
  "version": "1.0.0",
  "description": "Test automation framework for saucedemo application using playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep \"@smoke\" --project=chromium --reporter=html",
    "test:regression": "playwright test --grep \"@regression\" --project=chromium --project=firefox --project=webkit --reporter=html",
    "test:regression:shard": "playwright test --grep \"@regression\" --project=chromium --project=firefox --project=webkit --shard=$SHARD",
    "test:regression:shard:blob": "playwright test --grep \"@regression\" --project=chromium --project=firefox --project=webkit --shard=$SHARD --reporter=blob",
    "report:merge:html": "playwright merge-reports --reporter=html ./blob-report",
    "test:auth": "playwright test --grep \"@auth\"",
    "auth:state": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/auth-generate-state.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "PWDEBUG=1 playwright test",
    "report": "playwright show-report",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "check": "npm run lint && npm run format && npm run typecheck && npm test",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write --ignore-unknown",
    "*.{css,scss}": "prettier --write"
  }
}
